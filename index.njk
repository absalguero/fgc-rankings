{% extends "layout.njk" %}

{% block head %}
  <title>Street Fighter 6 Global Player Rankings</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
  /* 2. Create the '+' expander button and vertically center it */
#rankings-table tbody tr::after,
#tournament-results-table tbody tr::after {
    content: '+';
    position: absolute;
    top: 1.42rem; /* Position the top at the halfway mark */
    right: 1rem;
    transform: translateY(-50%); /* Shift it up by half its own height */
    font-size: 1.5rem;
    font-weight: bold;
    color: #FFFFFF;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.7);
    transition: transform 0.2s ease-in-out;
}

/* 3. When expanded, turn '+' into '-' and keep it centered */
#rankings-table tbody tr.is-expanded::after,
#tournament-results-table tbody tr.is-expanded::after {
    content: '−';
    /* We combine the centering and rotation transforms */
    transform: translateY(-50%) rotate(180deg);
}
    /* New rule for transparent header and white text */
#rankings-table thead th {
    background-color: transparent;
    color: #ffffff;
    font-family: Arial, sans-serif;
    font-size: 18px;
}
    
/* Add this rule to center all table headers */
#rankings-table th {
    text-align: center;
}
    
/* New rule for centering the content of the "Change" column */
.change-cell {
    text-align: center;
}

/* This is the corrected version with swapped transforms */
#rankings-table thead th.sorted-asc .sort-icon {
    transform: rotate(180deg); /* Rotates the arrow to point UP */
}

#rankings-table thead th.sorted-desc .sort-icon {
    transform: rotate(0deg); /* Rotates the arrow to point DOWN */
}

<style>
/* --- Final, Corrected Sort Arrow Styles for index.njk --- */

/* This sets the default state (dim and pointing down) for desktop arrows */
#rankings-table th:not(.sorted-asc):not(.sorted-desc) .sort-icon {
    opacity: 0.3;
    transform: rotate(180deg);
    transition: transform 0.2s ease-in-out, opacity 0.2s ease-in-out;
}

/* This is the HOVER state for desktop arrows */
#rankings-table th:hover .sort-icon {
    opacity: 0.6;
}

/* This is the ACTIVE state for ascending sort (points up, bright) on desktop */
#rankings-table th.sorted-asc .sort-icon {
    opacity: 1;
    transform: rotate(0deg);
}

/* This is the ACTIVE state for descending sort (points down, bright) on desktop */
#rankings-table th.sorted-desc .sort-icon {
    opacity: 1;
    transform: rotate(180deg);
}

/* This sets the default state for mobile arrows */
#mobile-sort-container .mobile-sort-btn:not(.sorted-asc):not(.sorted-desc) .sort-icon {
    opacity: 0.3;
    transform: rotate(180deg);
    transition: transform 0.2s ease-in-out, opacity 0.2s ease-in-out;
}

/* This is the HOVER state for mobile arrows */
#mobile-sort-container .mobile-sort-btn:hover .sort-icon {
    opacity: 0.6;
}

/* This is the ACTIVE state for ascending sort (points up, bright) on mobile */
#mobile-sort-container .mobile-sort-btn.sorted-asc .sort-icon {
    opacity: 1;
    transform: rotate(0deg);
}

/* This is the ACTIVE state for descending sort (points down, bright) on mobile */
#mobile-sort-container .mobile-sort-btn.sorted-desc .sort-icon {
    opacity: 1;
    transform: rotate(180deg);
}

/* Media query for responsive design on smaller screens */
@media (max-width: 768px) {
    /* Ensure the main content container respects the viewport width */
    .content-container {
        box-sizing: border-box;
        width: 100%;
        padding: 0 10px;
    }
    
    /* Center the mobile sort buttons */
    #mobile-sort-container {
        display: flex;
        flex-wrap: wrap; /* Allows buttons to wrap to the next line */
        justify-content: center; /* This centers the buttons horizontally */
        overflow-x: hidden; /* Prevents horizontal scrolling */
        gap: 10px; /* Optional: Adds spacing between buttons */
    }
    
    #mobile-sort-container::-webkit-scrollbar {
        display: none;
    }

    .mobile-sort-btn {
    background-color: #FF5E13;
    color: #000000;
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    display: flex; 
    align-items: center; 
    justify-content: center;
    gap: 5px; /* Adds a small space between the text and arrow */
}

    /* --- Add space for the expand button --- */
    #rankings-table tbody tr td:first-child,
    #tournament-results-table tbody tr td:first-child {
        padding-right: 2.5rem;
    }
    
    /* Hide specific columns for mobile */
    #rankings-table thead th[data-column-index="3"],
    #mobile-sort-container .mobile-sort-btn[data-column-index="3"],
    #rankings-table tbody td:nth-child(4) {
        display: none;
    }
    
    /* Make the table responsive within its container if it overflows */
    .table-wrapper {
        overflow-x: auto;
    }
}
    
/* Desktop-specific rules for optimal column width and layout */
@media (min-width: 769px) {
    .content-container.full-width {
        max-width: 1000px;
        margin: 0 auto;
    }

    #rankings-table {
        width: 100%;
        table-layout: auto;
    }

    /* Add padding to all table cells */
    #rankings-table th, #rankings-table td {
        padding: 8px 12px;
    }

    /* Set min-widths for headers and cells to prevent content spillage */
    #rankings-table th[data-column-index="0"], #rankings-table td:nth-child(1) { min-width: 50px; }
    #rankings-table th[data-column-index="1"], #rankings-table td:nth-child(2) { min-width: 70px; }
    #rankings-table th[data-column-index="3"], #rankings-table td:nth-child(4) { min-width: 100px; }
    #rankings-table th[data-column-index="4"], #rankings-table td:nth-child(5) { min-width: 80px; }
    #rankings-table th[data-column-index="5"], #rankings-table td:nth-child(6) { min-width: 70px; }

#rankings-table th span,
#mobile-sort-container .mobile-sort-btn {
    display: flex;
    align-items: center;
    justify-content: center; /* This will center content within the button */
}

/* This targets the SVG specifically to add spacing */
.sort-icon {
    margin-left: 5px; /* Adds space between text and icon */
}
}

/* --- Final working styles (high specificity) --- */

/* Corrected opacity for colored rows (1-5 only) */
#rankings-table tbody tr.rank-1 td { background-color: #ffd70030; color: #FFD700; text-shadow: 0 0 4px #FFD700; }
#rankings-table tbody tr.rank-2 td { background-color: #c0c0c030; color: #C0C0C0; text-shadow: 0 0 4px #C0C0C0; }
#rankings-table tbody tr.rank-3 td { background-color: #cd7f3230; color: #cd7f32; text-shadow: 0 0 4px #cd7f32; }
#rankings-table tbody tr.rank-4 td { background-color: #4b371c30; color: #b0c4de; text-shadow: 0 0 4px #b0c4de; }
#rankings-table tbody tr.rank-5 td { background-color: #36454F30; color: #8c7359; text-shadow: 0 0 4px #8c7359; }

/* Styles for the colored glow around all images */
#rankings-table .rank-1 .player-icon,
#rankings-table .rank-1 .character-icon,
#rankings-table .rank-1 .flag-icon { box-shadow: 0 0 6px 1px #FFD700; }
#rankings-table .rank-2 .player-icon,
#rankings-table .rank-2 .character-icon,
#rankings-table .rank-2 .flag-icon { box-shadow: 0 0 6px 1px #C0C0C0; }
#rankings-table .rank-3 .player-icon,
#rankings-table .rank-3 .character-icon,
#rankings-table .rank-3 .flag-icon { box-shadow: 0 0 6px 1px #cd7f32; }
#rankings-table .rank-4 .player-icon,
#rankings-table .rank-4 .character-icon,
#rankings-table .rank-4 .flag-icon { box-shadow: 0 0 6px 1px #b0c4de; }
#rankings-table .rank-5 .player-icon,
#rankings-table .rank-5 .character-icon,
#rankings-table .rank-5 .flag-icon { box-shadow: 0 0 6px 1px #8c7359; }
#rankings-table .ranked-6-40 .player-icon,
#rankings-table .ranked-6-40 .character-icon,
#rankings-table .ranked-6-40 .flag-icon { box-shadow: 0 0 6px 1px #b8d9bf; }
  </style>
{% endblock %}

