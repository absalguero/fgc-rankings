        </tr>
      </thead>
      <tbody>
        <!-- The table body will be populated dynamically by main.js -->
      </tbody>
    </table>
  </div>
  <div class="load-more-container">
    <button id="load-more-btn" class="load-more-btn" style="display:none;">Load More</button>
  </div>
</div>
{% endblock %}

{% block scripts %}
  <script src="/js/main.js" defer></script>
{% endblock %}
