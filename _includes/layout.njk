    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}FGC Top Players{% endblock %}</title>
    {% block meta_description %}
<meta name="description" content="The definitive player rankings for top competitive fighting games. Track pro players across Street Fighter, Tekken, and more." />
{% endblock %}
    <meta property="og:type" content="website">
<meta property="og:url" content="https://fgc-player-rankings.netlify.app{{ page.url }}">
<meta property="og:title" content="{% block og_title %}{{ title or 'FGC Top Players' }}{% endblock %}">
<meta property="og:description" content="{% block og_description %}The definitive ranking of the top professional SF6 players. See who's on top and track the rise and fall of your favorite pros.{% endblock %}">
<meta property="og:image" content="https://fgc-player-rankings.netlify.app/images/fgc-rankings-social-card.png">
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="https://fgc-player-rankings.netlify.app{{ page.url }}">
<meta property="twitter:title" content="{% block twitter_title %}{{ title or 'Street Fighter 6 Global Player Rankings' }}{% endblock %}">
<meta property="twitter:description" content="{% block twitter_description %}The definitive ranking of the top professional SF6 players. See who's on top and track the rise and fall of your favorite pros.{% endblock %}">
<meta property="twitter:image" content="https://fgc-player-rankings.netlify.app/images/fgc-rankings-social-card.png">
    <link rel="canonical" href="https://fgc-player-rankings.netlify.app/" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Roboto:wght@400;500&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/images/android-chrome-192x192.png">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
    <meta name="theme-color" content="#FF5E13" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    {% css %}{% block head %}{% endblock %}
</head>
<body class="{{ pageClass }}">

    <header class="mobile-header">
        <button class="nav-toggle" aria-label="Toggle Navigation">
            <svg class="hamburger-icon" aria-hidden="true" focusable="false" viewBox="0 0 24 24">
                <path d="M3 12h18M3 6h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <svg class="close-icon" aria-hidden="true" focusable="false" viewBox="0 0 24 24">
                <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
        </button>
        <div class="mobile-search">
            <form role="search" class="search-form">
                <input type="search" id="mobile-search-input" class="search-form__input" placeholder="Search site..." aria-label="Search site">
                <button type="submit" class="search-form__button" aria-label="Search">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </header>

{% block page_header %}
{% endblock %}

    <div class="page-wrapper">
        <nav class="sidebar nav-sidebar" aria-label="Main menu" role="navigation">
            <h2 class="sidebar__label">Navigation</h2>
            <div class="sidebar-search">
                <form role="search" class="search-form">
                    <input type="search" id="sidebar-search-input" class="search-form__input" placeholder="Search site..." aria-label="Search site">
                    <button type="submit" class="search-form__button" aria-label="Search">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
            <ul class="nav-menu">
                {% set currentPath = page.url | default('/') %}
                <li><a href="/" class="nav-menu__link {% if currentPath === '/' %}is-active{% endif %}"><i class="fas fa-trophy"></i>SF6 Rankings</a></li>
                <li><a href="/tournament-results/" class="nav-menu__link {% if '/tournament-results/' in currentPath %}is-active{% endif %}"><i class="fas fa-sitemap"></i>Tournament Results</a></li>
                <li><a href="/ranking-system/" class="nav-menu__link {% if '/ranking-system/' in currentPath %}is-active{% endif %}"><i class="fas fa-scale-balanced"></i>Ranking System</a></li>
            </ul>
        </nav>

        <main class="content">
            <div role="main" id="maincontent" tabindex="-1">   
                {% block content %}{% endblock %}
            </div>

            <footer class="content-footer">
                <div class="footer-columns">
                    <div class="footer-column">
                        <h3>Navigation</h3>
                        <ul class="footer-links">
                            <li><a href="/">SF6 Rankings</a></li>
                            <li><a href="/tournament-results/">Tournament Results</a></li>
                            <li><a href="/ranking-system/">Ranking System</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h3>Community</h3>
                        <ul class="footer-links">
                            <li><a href="/about/">About Us</a></li>
                            <li><a href="#">Become a Contributor</a></li>
                            <li><a href="#">Support the Site</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h3>Follow Us</h3>
                        <ul class="footer-social">
                            <li><a href="https://x.com" target="_blank" rel="noopener noreferrer"><i class="fab fa-x-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer-legal">
                    <p>&copy; {% year %} FGC Top Players. All rights reserved.<br>
                    An unofficial, community-driven resource. All game and player trademarks and images are the property of their respective owners.</p>
                    <p class="legal-links">
                        <a href="#">Contact</a> |
                        <a href="#">Terms of Use</a> |
                        <a href="#">Privacy Policy</a>
                    </p>
                </div>
            </footer>
        </main>

        <aside class="sidebar right-sidebar" aria-label="Upcoming Rated Events">
            <h2 class="sidebar__label">Upcoming Rated Events</h2>
            
            {% for sidebarEvent in events %}
                <a href="{{ sidebarEvent.url }}" target="_blank" rel="noopener noreferrer" class="event-card-link">
                    <div class="event-card">
                        <span class="event-card__name">{{ sidebarEvent.name }}</span>
                        <img 
                            src="/images/events/{{ sidebarEvent.slug }}.png" 
                            alt="{{ sidebarEvent.name }}" 
                            loading="lazy" 
                            class="event-card__image"
                            onerror="this.style.display='none';"
                        />
                        
                        <div class="event-card__date">{{ sidebarEvent.date }}</div>
                        <span class="btn btn--secondary btn--small">More Info</span>
                    </div>
                </a>
            {% else %}
                <p>No upcoming events at this time.</p>
            {% endfor %}
        </aside>
    </div>

    <noscript>
        <p style="text-align:center;padding:1rem;background:#111;color:#f00;">
            JavaScript is disabled. Some interactive features may not work correctly.
        </p>
    </noscript>
    
    <script src="/js/main.js" defer></script>
    {% block scripts %}{% endblock %}

    <button id="back-to-top-btn" class="back-to-top-btn" title="Go to top" aria-label="Go to top">
        <i class="fas fa-chevron-up"></i>
    </button>
<script>
  function handleResponsiveLayout() {
    const isMobile = window.matchMedia('(max-width: 768px)').matches;
    const pageWrapper = document.querySelector('.page-wrapper');
    const mobileHeader = document.querySelector('.mobile-header');
    const tournamentNav = document.querySelector('.tournament-nav');
    const pageTitle = document.querySelector('.page-tournament-results h1');

    if (!pageWrapper || !mobileHeader) return;

    // --- 1. Handle Content Padding ---
    if (isMobile) {
      pageWrapper.style.paddingTop = `${mobileHeader.offsetHeight}px`;
    } else {
      pageWrapper.style.paddingTop = '0';
    }

    // --- 2. Handle Tournament Nav Position ---
    if (tournamentNav && pageTitle) {
      if (isMobile) {
        // On mobile, move nav to be after the main site header
        mobileHeader.after(tournamentNav);
      } else {
        // On desktop, move nav back to be after the H1 title
        pageTitle.after(tournamentNav);
      }
    }
  }

  // Run on page load and on resize
  document.addEventListener('DOMContentLoaded', handleResponsiveLayout);
  window.addEventListener('resize', handleResponsiveLayout);
</script>
</body>
</html>